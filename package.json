{
  "name": "simply-express-generator",
  "version": "0.3.1",
  "description": "A simple express generator utility for barebones Express/TS projects",
  "main": "dist/index.js",
  "bin": {
    "simply-express-generator": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/src/index.js",
    "dev": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "test": "jest --forceExit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "express",
    "typescript",
    "project-generator",
    "starter-template",
    "boilerplate",
    "npm-package",
    "template-generator",
    "cli",
    "nodejs",
    "web-development",
    "backend",
    "server",
    "application"
  ],
  "author": "Marcos J. Pe√±a Pollastri (@marcosppollastri)",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.1",
    "@types/mock-fs": "^4.13.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "mock-fs": "^5.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "module-alias": "^2.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/tests/**/*.(test|spec).ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/test/",
      "/node_modules/",
      "/.eslintrc\\.js"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  },
  "prepublishOnly": "npm run build",
  "prepare": "npm run build",
  "files": [
    "dist/",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcosppollastri/simply-express-generator"
  }
}
